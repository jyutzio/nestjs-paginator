{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:mocha/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "mocha"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "import/no-unresolved": 0,
    "prettier/prettier": [
      "error"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}